<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_out_articles</name>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2016 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>MOD_OUT_MENU_XML_DESCRIPTION</description>
	<files>
		<filename module="MOD_OUT_MENU">mod_out_articles.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_out_articles.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_out_articles.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.mod_out_articles.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.mod_out_articles.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">				
				<field
					name="table_style"
					type="radio"
					label="MOD_OUT_MENU_FIELD_SHOW_ATTACHMENTS_LABEL"
					description="MOD_OUT_MENU_FIELD_SHOW_ATTACHMENTS_DESC"
					default="0"
					>
					<option value="0">MOD_OUT_MENU_FIELD_SHOW_ATTACHMENTS_ONE</option>
					<option value="1">MOD_OUT_MENU_FIELD_SHOW_ATTACHMENTS_TWO</option>
					<option value="2">MOD_OUT_MENU_FIELD_SHOW_ATTACHMENTS_TREE</option>
				</field>
				<field
					name="data_clock"
					type="radio"
					label="MOD_OUT_MENU_FIELD_SHOW_JAMP_LABEL"
					description="MOD_OUT_MENU_FIELD_SHOW_JAMP_DESC"
					default="1"
					>
					<option value="0">MOD_OUT_MENU_FIELD_SHOW_JAMP_ONE</option>
					<option value="1">MOD_OUT_MENU_FIELD_SHOW_JAMP_TWO</option>
				</field>
			</fieldset>
			<fieldset name="advanced">

				
			</fieldset>
		</fields>
	</config>
</extension>
